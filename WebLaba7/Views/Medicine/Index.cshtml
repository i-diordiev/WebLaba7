@model IEnumerable<WebLaba7.Models.Medicine>

@{
    ViewBag.Title = "Medicine List";
    Layout = "_Layout";
}

<h2>Medicine List</h2>
<div class="text-right">
    <a asp-controller="Medicine" asp-action="Create" class="btn btn-primary">Create new medicine</a>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var medicine in Model)
        {
            <tr>
                <td>@medicine.Name</td>
                <td>@medicine.Price</td>
                <td>
                    <a asp-controller="Medicine" asp-action="Delete" asp-route-Id="@medicine.Id" class="btn btn-danger mx-1">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>There is no medicine.</p>
}
