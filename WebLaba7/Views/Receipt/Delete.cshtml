@model WebLaba7.Models.Receipt

@{
    ViewBag.Title = "Delete Receipt";
    Layout = "_Layout";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete receipt</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ClientFirstName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="ClientLastName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="ClientPhoneNumber"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="MedicineId"></label>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="ClientFirstName" disabled class="form-control"/>
                    </div>
                    <div class="col-3">
                        <input asp-for="ClientLastName" disabled class="form-control"/>
                    </div>
                    <div class="col-3">
                        <input asp-for="ClientPhoneNumber" disabled class="form-control"/>
                    </div>
                    <div class="col-3">
                        <input asp-for="MedicineId" disabled class="form-control"/>
                    </div>
                    
                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-75">Back</a>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</form>
